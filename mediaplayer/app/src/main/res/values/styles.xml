<resources>

    <!-- Light application theme -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#1d1d1d</item>
        <item name="colorPrimaryDark">#0f0f0f</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PlayerControl" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
