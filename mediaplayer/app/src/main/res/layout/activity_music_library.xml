<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MusicLibraryActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:id="@+id/toolbar"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TabLayout"
            android:id="@+id/tabs"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/content_viewpager">
    </androidx.viewpager.widget.ViewPager>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="false" android:background="@android:color/white" android:elevation="4dp">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/ic_play_arrow_black_24dp"
            android:id="@+id/play_pause" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/skip_next"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" style="@android:style/Widget.Material.Light.ImageButton"
            android:background="@android:color/white"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/ic_skip_next_black_24dp"
            android:id="@+id/skip_next" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            style="@android:style/Widget.Material.Light.ImageButton" android:background="@android:color/white"/>
        <TextView
            android:text="song_header_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/song_header" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/play_pause"
            android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/song_album_art"
            android:layout_marginStart="8dp"/>
        <TextView
            android:text="song_artist_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/song_artist"
            app:layout_constraintTop_toBottomOf="@+id/song_header" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/play_pause" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/song_album_art" android:layout_marginStart="8dp"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/ic_music_video_black_24dp"
            android:id="@+id/song_album_art"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>